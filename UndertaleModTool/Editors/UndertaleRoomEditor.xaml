<local:DataUserControl x:Class="UndertaleModTool.UndertaleRoomEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UndertaleModTool"
             xmlns:undertale="clr-namespace:UndertaleModLib.Models;assembly=UndertaleModLib"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance undertale:UndertaleRoom}" x:Name="RoomEditor">
    <UserControl.Resources>
        <local:GridConverter x:Key="GridConverter"/>
        <local:UndertaleCachedImageLoader x:Key="UndertaleCachedImageLoader"/>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:SimplePointsDisplayConverter x:Key="SimplePointsDisplayConverter"/>
        <local:ObjCenterXConverter x:Key="ObjCenterXConverter" />
        <local:ObjXOffsetConverter x:Key="ObjXOffsetConverter" />
        <local:ObjCenterYConverter x:Key="ObjCenterYConverter" />
        <local:LayerFlattenerConverter x:Key="LayerFlattenerConverter" />
        <local:IsGMS2Converter x:Key="IsGMS2Converter" />
        <local:RoomObjectTemplateSelector x:Key="RoomObjectTemplateSelector"/>
        <local:BGColorConverter x:Key="BGColorConverter"/>
        <local:BGViewportConverter x:Key="BGViewportConverter"/>
        <local:LayerTypeConverter x:Key="LayerTypeConverter"/>
        <local:GridSizeGroupConverter x:Key="GridSizeGroupConverter"/>
        <local:GridColumnSizeConverter x:Key="GridColumnSizeConverter"/>
        <local:TileCellConverter x:Key="TileCellConverter"/>
        <CompositeCollection x:Key="AllObjectsGMS1">
            <CollectionContainer Collection="{Binding Source={x:Reference RoomEditor}, Path=DataContext.Backgrounds}"/>
            <CollectionContainer Collection="{Binding Source={x:Reference RoomEditor}, Path=DataContext.Tiles}"/>
            <CollectionContainer Collection="{Binding Source={x:Reference RoomEditor}, Path=DataContext.GameObjects}"/>
            <CollectionContainer Collection="{Binding Source={x:Reference RoomEditor}, Path=PreviewPath, Converter={StaticResource SimplePointsDisplayConverter}}"/>
        </CompositeCollection>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="AnimationSpeedType">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="undertale:AnimationSpeedType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style x:Key="Centered" TargetType="FrameworkElement">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <UserControl.CommandBindings>
        <CommandBinding Command="Copy" Executed="Command_Copy" />
        <CommandBinding Command="Paste" Executed="Command_Paste" />
        <CommandBinding Command="Undo" Executed="Command_Undo" />
    </UserControl.CommandBindings>
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Control" Key="C" Command="Copy"/>
        <KeyBinding Modifiers="Control" Key="P" Command="Paste"/>
        <KeyBinding Modifiers="Control" Key="Z" Command="Undo"/>
    </UserControl.InputBindings>

    <Grid Height="{Binding RelativeSource={RelativeSource FindAncestor,
                           AncestorType={x:Type ScrollViewer}},
                           Path=ActualHeight}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="342px"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView Grid.Column="0" Margin="0,0,3,0" SelectedItemChanged="TreeView_SelectedItemChanged" Name="RoomObjectsTree" KeyDown="RoomObjectsTree_KeyDown" MouseDoubleClick="RoomObjectsTree_MouseDoubleClick">
                <TreeView.Resources>
                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+GameObject}">
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding Mode="OneWay" StringFormat="{}Instance {0} of {1} (UndertaleRoom+GameObject)">
                                    <Binding Path="InstanceID" Mode="OneWay"/>
                                    <Binding Path="ObjectDefinition.Name.Content" Mode="OneWay" TargetNullValue="?" FallbackValue="EmptyInstance"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+Tile}">
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding Mode="OneWay" StringFormat="{}Tile {0} of {1} (UndertaleRoom+Tile)">
                                    <Binding Path="InstanceID" Mode="OneWay"/>
                                    <Binding Path="ObjectDefinition.Name.Content" Mode="OneWay" TargetNullValue="?" FallbackValue="EmptyTile"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+SpriteInstance}">
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding Mode="OneWay" StringFormat="{}{0} (UndertaleRoom+SpriteInstance)">
                                    <Binding Path="Name.Content" Mode="OneWay" TargetNullValue="?" FallbackValue="EmptySprite"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#D4D4D4"/>
                </TreeView.Resources>

                <TreeViewItem Header="{Binding Name.Content}" Name="RoomRootItem" IsExpanded="True">
                    <TreeViewItem Name="BGItems" Header="Backgrounds" ItemsSource="{Binding Backgrounds, Mode=OneWay}" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}" IsExpanded="True">
                        <TreeViewItem.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <TextBlock Text="{Binding BackgroundDefinition, Mode=OneWay, TargetNullValue='(no name)'}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Enabled, Mode=OneWay}" Value="False">
                                                    <Setter Property="Foreground"  Value="LightGray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </HierarchicalDataTemplate>
                        </TreeViewItem.ItemTemplate>
                    </TreeViewItem>
                    <TreeViewItem Name="ViewItems" Header="Views" ItemsSource="{Binding Views, Mode=OneWay}" IsExpanded="True">
                        <TreeViewItem.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <TextBlock Text="View">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Enabled, Mode=OneWay}" Value="False">
                                                    <Setter Property="Foreground"  Value="LightGray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </HierarchicalDataTemplate>
                        </TreeViewItem.ItemTemplate>
                    </TreeViewItem>
                    <!-- GameObjItems header changes depending on GMS version -->
                    <TreeViewItem Name="GameObjItems" Header="Game objects" ItemsSource="{Binding GameObjects, Mode=OneWay}">
                        <TreeViewItem.Resources>
                            <ContextMenu x:Key="cm">
                                <MenuItem Header="New Object Instance" Click="MenuItem_NewObjectInstance_Click"/>
                            </ContextMenu>
                        </TreeViewItem.Resources>
                        <TreeViewItem.Style>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="ContextMenu" Value="{StaticResource cm}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}" Value="False">
                                        <DataTrigger.Setters>
                                            <Setter Property="Foreground"  Value="LightGray"/>
                                            <Setter Property="ContextMenu" Value="{x:Null}"/>
                                        </DataTrigger.Setters>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TreeViewItem.Style>
                    </TreeViewItem>
                    <TreeViewItem Name="TileItems" Header="Tiles" ItemsSource="{Binding Tiles, Mode=OneWay}" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}">
                        <TreeViewItem.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Mode="OneWay" StringFormat="{}Tile {0} of {1} (UndertaleRoom+Tile)">
                                            <Binding Path="InstanceID"/>
                                            <Binding Path="ObjectDefinition.Name.Content" TargetNullValue="?" FallbackValue="EmptyTile"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </HierarchicalDataTemplate>
                        </TreeViewItem.ItemTemplate>
                        <TreeViewItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="New Tile" Click="MenuItem_NewGMS1Tile_Click"/>
                            </ContextMenu>
                        </TreeViewItem.ContextMenu>
                    </TreeViewItem>
                    <TreeViewItem Name="LayerItems" Header="Layers" ItemsSource="{Binding Layers, Mode=OneWay}" IsExpanded="True" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}, ConverterParameter=invert}">
                        <TreeViewItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="New Instances layer" Click="MenuItem_NewLayerInstances_Click"/>
                                <MenuItem Header="New Tiles layer" Click="MenuItem_NewLayerTiles_Click"/>
                                <MenuItem Header="New Background layer" Click="MenuItem_NewLayerBackground_Click"/>
                                <MenuItem Header="New Assets layer" Click="MenuItem_NewLayerAssets_Click"/>
                            </ContextMenu>
                        </TreeViewItem.ContextMenu>
                        <TreeViewItem.ItemTemplateSelector>
                            <local:LayerDataTemplateSelector>
                                <local:LayerDataTemplateSelector.InstancesDataTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding InstancesData.Instances, Mode=OneWay}" ItemTemplateSelector="{x:Null}">
                                        <TextBlock Text="{Binding LayerName.Content, Mode=OneWay}">
                                            <TextBlock.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="New Object Instance" Click="MenuItem_NewGMS2ObjectInstance_Click"/>
                                                </ContextMenu>
                                            </TextBlock.ContextMenu>
                                        </TextBlock>
                                    </HierarchicalDataTemplate>
                                </local:LayerDataTemplateSelector.InstancesDataTemplate>
                                <local:LayerDataTemplateSelector.TilesDataTemplate>
                                    <HierarchicalDataTemplate ItemTemplateSelector="{x:Null}">
                                        <TextBlock Text="{Binding LayerName.Content, Mode=OneWay}"/>
                                    </HierarchicalDataTemplate>
                                </local:LayerDataTemplateSelector.TilesDataTemplate>
                                <local:LayerDataTemplateSelector.AssetsDataTemplate>
                                    <HierarchicalDataTemplate ItemTemplateSelector="{x:Null}">
                                        <HierarchicalDataTemplate.ItemsSource>
                                            <MultiBinding Mode="OneWay">
                                                <MultiBinding.Converter>
                                                    <local:MultiCollectionBinding/>
                                                    <!-- TODO: hack, may break updates -->
                                                </MultiBinding.Converter>
                                                <Binding Path="AssetsData.LegacyTiles"/>
                                                <Binding Path="AssetsData.Sprites"/>
                                            </MultiBinding>
                                        </HierarchicalDataTemplate.ItemsSource>
                                        <TextBlock Text="{Binding LayerName.Content, Mode=OneWay}">
                                            <TextBlock.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="New Legacy Tile" Click="MenuItem_NewLegacyTile_Click"/>
                                                    <MenuItem Header="New Sprite Instance" Click="MenuItem_NewSprite_Click"/>
                                                </ContextMenu>
                                            </TextBlock.ContextMenu>
                                        </TextBlock>
                                    </HierarchicalDataTemplate>
                                </local:LayerDataTemplateSelector.AssetsDataTemplate>
                                <local:LayerDataTemplateSelector.BackgroundDataTemplate>
                                    <HierarchicalDataTemplate ItemTemplateSelector="{x:Null}">
                                        <TextBlock Text="{Binding LayerName.Content, Mode=OneWay}" />
                                    </HierarchicalDataTemplate>
                                </local:LayerDataTemplateSelector.BackgroundDataTemplate>
                            </local:LayerDataTemplateSelector>
                        </TreeViewItem.ItemTemplateSelector>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>

            <ScrollViewer Grid.Column="1" Margin="3,0,0,0" Name="ObjectEditor" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom}">
                        <Grid IsSharedSizeScope="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <!-- "s22" = size 22 - default height of text box -->
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="{Binding Flags, Mode=OneTime, Converter={StaticResource GridSizeGroupConverter}}"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="{Binding Flags, Mode=OneTime, Converter={StaticResource GridSizeGroupConverter}}"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="TextBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="local:UndertaleStringReference" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="local:UndertaleObjectReference" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="local:ColorPicker" BasedOn="{StaticResource Centered}"/>
                            </Grid.Resources>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="3">Name</TextBlock>
                            <local:UndertaleStringReference Grid.Row="0" Grid.Column="2" Margin="3" ObjectReference="{Binding Name}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3">Caption</TextBlock>
                            <local:UndertaleStringReference Grid.Row="1" Grid.Column="2" Margin="3" ObjectReference="{Binding Caption}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="3">Size</TextBlock>
                            <Grid Grid.Row="2" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding Width}"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding Height}"/>
                            </Grid>

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="3">Speed</TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="2" Margin="3" Text="{Binding Speed}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="3">Persistent</TextBlock>
                            <CheckBox Grid.Row="4" Grid.Column="2" Margin="3" IsChecked="{Binding Persistent}"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="3" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}">Background color</TextBlock>
                            <local:ColorPicker HasAlpha="False" Grid.Row="5" Grid.Column="2" Margin="3" Color="{Binding BackgroundColor}" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="3" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}">Draw background color</TextBlock>
                            <CheckBox Grid.Row="6" Grid.Column="2" Margin="3" IsChecked="{Binding DrawBackgroundColor}" Visibility="{Binding Flags, Mode=OneTime, Converter={StaticResource IsGMS2Converter}}"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="3">Creation Code</TextBlock>
                            <local:UndertaleObjectReference Grid.Row="7" Grid.Column="2" Margin="3" ObjectReference="{Binding CreationCodeId}" ObjectType="{x:Type undertale:UndertaleCode}"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Margin="3">Flags</TextBlock>
                            <TextBox Grid.Row="8" Grid.Column="2" Margin="3" Text="{Binding Flags, Converter={StaticResource IsGMS2Converter}, ConverterParameter=flags}"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Margin="3">World</TextBlock>
                            <TextBox Grid.Row="9" Grid.Column="2" Margin="3" Text="{Binding World}"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Margin="3">Top/Left/Right/Bottom</TextBlock>
                            <Grid Grid.Row="10" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding Top}"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding Left}"/>
                                <TextBox Grid.Column="2" Margin="3" Text="{Binding Right}"/>
                                <TextBox Grid.Column="3" Margin="3" Text="{Binding Bottom}"/>
                            </Grid>

                            <TextBlock Grid.Row="11" Grid.Column="0" Margin="3">Gravity</TextBlock>
                            <Grid Grid.Row="11" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding GravityX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding GravityY}" ToolTip="Y"/>
                            </Grid>

                            <TextBlock Grid.Row="12" Grid.Column="0" Margin="3">Grid</TextBlock>
                            <TextBox Grid.Row="12" Grid.Column="2" Margin="3" Text="{Binding Grid}"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Margin="3">Grid Thickness</TextBlock>
                            <TextBox Grid.Row="13" Grid.Column="2" Margin="3" Text="{Binding GridThicknessPx}"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+Background}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="TextBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="local:UndertaleObjectReference" BasedOn="{StaticResource Centered}"/>
                            </Grid.Resources>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="3">Enabled</TextBlock>
                            <CheckBox Grid.Row="0" Grid.Column="2" Margin="3" IsChecked="{Binding Enabled}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3">Foreground</TextBlock>
                            <CheckBox Grid.Row="1" Grid.Column="2" Margin="3" IsChecked="{Binding Foreground}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="3">Definition</TextBlock>
                            <local:UndertaleObjectReference Grid.Row="2" Grid.Column="2" Margin="3" ObjectReference="{Binding BackgroundDefinition}" ObjectType="{x:Type undertale:UndertaleBackground}" CanRemove="False"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="3">Position</TextBlock>
                            <Grid Grid.Row="3" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding X}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding Y}" ToolTip="Y"/>
                            </Grid>

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="3">Tiling</TextBlock>
                            <Grid Grid.Row="4" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" Margin="3" IsChecked="{Binding TiledHorizontally}" ToolTip="Horizontal"/>
                                <CheckBox Grid.Column="1" Margin="3" IsChecked="{Binding TiledVertically}" ToolTip="Vertical"/>
                            </Grid>

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="3">Speed</TextBlock>
                            <Grid Grid.Row="5" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding SpeedX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding SpeedY}" ToolTip="Y"/>
                            </Grid>

                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="3">Stretch</TextBlock>
                            <CheckBox Grid.Row="6" Grid.Column="2" Margin="3" IsChecked="{Binding Stretch}"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+View}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="TextBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource Centered}"/>
                                <Style TargetType="local:UndertaleObjectReference" BasedOn="{StaticResource Centered}"/>
                            </Grid.Resources>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="3">Enabled</TextBlock>
                            <CheckBox Grid.Row="0" Grid.Column="2" Margin="3" IsChecked="{Binding Enabled}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3">Pos/size</TextBlock>
                            <Grid Grid.Row="1" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding ViewX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding ViewY}" ToolTip="Y"/>
                                <TextBox Grid.Column="2" Margin="3" Text="{Binding ViewWidth}" ToolTip="Width"/>
                                <TextBox Grid.Column="3" Margin="3" Text="{Binding ViewHeight}" ToolTip="Height"/>
                            </Grid>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="3">Port pos/size</TextBlock>
                            <Grid Grid.Row="2" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding PortX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding PortY}" ToolTip="Y"/>
                                <TextBox Grid.Column="2" Margin="3" Text="{Binding PortWidth}" ToolTip="Width"/>
                                <TextBox Grid.Column="3" Margin="3" Text="{Binding PortHeight}" ToolTip="Height"/>
                            </Grid>

                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="3">Border</TextBlock>
                            <Grid Grid.Row="3" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding BorderX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding BorderY}" ToolTip="Y"/>
                            </Grid>

                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="3">Speed</TextBlock>
                            <Grid Grid.Row="4" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Margin="3" Text="{Binding SpeedX}" ToolTip="X"/>
                                <TextBox Grid.Column="1" Margin="3" Text="{Binding SpeedY}" ToolTip="Y"/>
                            </Grid>

                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="3">Follows object</TextBlock>
                            <local:UndertaleObjectReference Grid.Row="5" Grid.Column="2" Margin="3" ObjectReference="{Binding ObjectId}" ObjectType="{x:Type undertale:UndertaleGameObject}"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type undertale:UndertaleRoom+GameObject}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
                                <RowDefinition Height="Auto" SharedSizeGroup="s22"/>
